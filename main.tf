##############################################################################
# IBM Cloud Provider
##############################################################################

provider ibm {
  ibmcloud_api_key      = var.ibmcloud_api_key
  region                = var.ibm_region
  ibmcloud_timeout      = 60
}

##############################################################################


##############################################################################
# Access Groups
##############################################################################

module access_groups {
    source        = "./access_groups"
    access_groups = var.access_groups
}

